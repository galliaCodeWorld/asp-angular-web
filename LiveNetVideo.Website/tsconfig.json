{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"declaration": false,
		"moduleResolution": "node",
		"target": "es5",
		"sourceMap": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipDefaultLibCheck": true,
		"lib": [ "es2015", "dom" ],
		"types": [
			"node",
			"jquery",

		]
	},
	"compileOnSave": false,
	"exclude": [ "node_modules" ],
	"atom": { "rewriteTsconfig": false }
}

